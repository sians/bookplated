
<div class="login-form">
  <%= simple_form_for(:user, :url => session_path(:user)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn-bookplated' %>
    </div>
  <% end %>
  <p class="sign-up-link">Don't have an account yet? <%= link_to 'Sign up', new_user_registration_path, class: 'link' %></p>

</div>
